= form_for(@event) do |f|
  - if @event.errors.any?
    #error_explanation
      %h2
        = pluralize(@event.errors.count, "error")
        prohibited this event from being saved:
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :students
    %br/
    = f.text_area :students
  .field
    = f.label :amount
    %br/
    = f.number_field :amount
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .actions
    = f.submit
