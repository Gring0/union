= form_for(@subsidy_type) do |f|
  - if @subsidy_type.errors.any?
    #error_explanation
      %h2
        = pluralize(@subsidy_type.errors.count, "error")
        prohibited this subsidy_type from being saved:
      %ul
        - @subsidy_type.errors.full_messages.each do |msg|
          %li= msg
