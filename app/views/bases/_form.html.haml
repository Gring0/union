= form_for(@basis) do |f|
  - if @basis.errors.any?
    #error_explanation
      %h2
        = pluralize(@basis.errors.count, "error")
        prohibited this basis from being saved:
      %ul
        - @basis.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :enabled
    %br/
    = f.check_box :enabled
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .actions
    = f.submit
