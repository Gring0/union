<h1>Listing tours</h1>

<table>
  <tr>
    <th>Type</th>
    <th>Startdate</th>
    <th>Enddate</th>
    <th>Name</th>
    <th>Enabled</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tours.each do |tour| %>
  <tr>
    <td><%= tour.type %></td>
    <td><%= tour.startdate %></td>
    <td><%= tour.enddate %></td>
    <td><%= tour.name %></td>
    <td><%= tour.enabled %></td>
    <td><%= link_to 'Show', tour %></td>
    <td><%= link_to 'Edit', edit_tour_path(tour) %></td>
    <td><%= link_to 'Destroy', tour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

