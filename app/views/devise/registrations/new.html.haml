.span12
  %h2 Регистрация
  = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-vertical' }) do |f|
    = f.error_notification
    = f.input :email, :autofocus => true, :required => true, :label => "Электронная почта"
    = f.input :phone, :required => true, :label => "Телефонный номер"
    = f.input :password, :required => true, :label => "Пароль"
    = f.input :password_confirmation, :required => true, :label => "Подтверждение пароля"
    = f.input :name, :required => true, :label => "Фамилия"
    = f.input :academy_group, :required => true, :label => "Академическая группа"
    = f.input :card_number, :required => true, :label => "Номер зачётной книжки"
    = f.input :bank_account, :required => true, :label => "Номер банковского счёта"
    = f.button :submit, 'Зарегистрироваться', :class => 'btn-primary'
  = render "devise/shared/links"


